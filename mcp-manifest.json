{
  "name": "sn-cloudinary-mcp",
  "version": "0.1.0",
  "description": "MCP server bridging Cloudinary media operations.",
  "tools": [
    {
      "name": "cloudinary.upload",
      "description": "Upload an image or video to Cloudinary from URL, local path, or base64 data URI.",
      "inputSchema": {
        "type": "object",
        "required": ["source"],
        "properties": {
          "source": { "type": "string", "description": "Local path, remote URL, or base64 data URI." },
          "public_id": { "type": "string" },
          "folder": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "resource_type": { "type": "string", "enum": ["image", "video", "raw", "auto"] },
          "overwrite": { "type": "boolean" },
          "invalidate": { "type": "boolean" }
        }
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "public_id": { "type": "string" },
          "secure_url": { "type": "string" },
          "bytes": { "type": "number" },
          "format": { "type": "string" },
          "width": { "type": "number" },
          "height": { "type": "number" },
          "created_at": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    {
      "name": "cloudinary.asset.get",
      "description": "Fetch metadata for an asset by public_id.",
      "inputSchema": {
        "type": "object",
        "required": ["public_id"],
        "properties": {
          "public_id": { "type": "string" },
          "resource_type": { "type": "string", "enum": ["image", "video", "raw"] }
        }
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "public_id": { "type": "string" },
          "url": { "type": "string" },
          "secure_url": { "type": "string" },
          "format": { "type": "string" },
          "width": { "type": "number" },
          "height": { "type": "number" },
          "bytes": { "type": "number" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "context": { "type": "object" },
          "derived": { "type": "array" }
        }
      }
    },
    {
      "name": "cloudinary.asset.search",
      "description": "Search assets via Cloudinary search expression.",
      "inputSchema": {
        "type": "object",
        "required": ["expression"],
        "properties": {
          "expression": { "type": "string" },
          "max_results": { "type": "number" },
          "next_cursor": { "type": "string" }
        }
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "total_count": { "type": "number" },
          "next_cursor": { "type": "string" },
          "assets": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "public_id": { "type": "string" },
                "format": { "type": "string" },
                "bytes": { "type": "number" },
                "width": { "type": "number" },
                "height": { "type": "number" },
                "secure_url": { "type": "string" },
                "tags": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        }
      }
    },
    {
      "name": "cloudinary.url.transform",
      "description": "Generate a transformed delivery URL for an asset.",
      "inputSchema": {
        "type": "object",
        "required": ["public_id"],
        "properties": {
          "public_id": { "type": "string" },
          "format": { "type": "string" },
          "width": { "type": "number" },
          "height": { "type": "number" },
          "crop": { "type": "string" },
          "quality": { "type": "string" },
          "gravity": { "type": "string" },
          "flags": { "type": "array", "items": { "type": "string" } }
        }
      },
      "outputSchema": { "type": "object", "properties": { "url": { "type": "string" } } }
    },
    {
      "name": "cloudinary.asset.update_tags",
      "description": "Replace the entire set of tags on an asset.",
      "inputSchema": {
        "type": "object",
        "required": ["public_id", "tags"],
        "properties": {
          "public_id": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } }
        }
      },
      "outputSchema": { "type": "object", "properties": { "public_id": { "type": "string" }, "tags": { "type": "array", "items": { "type": "string" } } } }
    },
    {
      "name": "cloudinary.asset.add_tags",
      "description": "Add tags to an asset (preserving existing tags).",
      "inputSchema": {
        "type": "object",
        "required": ["public_id", "tags"],
        "properties": {
          "public_id": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } }
        }
      },
      "outputSchema": { "type": "object", "properties": { "public_id": { "type": "string" }, "added": { "type": "array", "items": { "type": "string" } } } }
    },
    {
      "name": "cloudinary.asset.delete_tags",
      "description": "Remove specific tags from an asset.",
      "inputSchema": {
        "type": "object",
        "required": ["public_id", "tags"],
        "properties": {
          "public_id": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } }
        }
      },
      "outputSchema": { "type": "object", "properties": { "public_id": { "type": "string" }, "removed": { "type": "array", "items": { "type": "string" } } } }
    },
    {
      "name": "cloudinary.asset.delete",
      "description": "Delete an asset by public_id.",
      "inputSchema": {
        "type": "object",
        "required": ["public_id"],
        "properties": {
          "public_id": { "type": "string" },
          "resource_type": { "type": "string", "enum": ["image", "video", "raw"] },
          "invalidate": { "type": "boolean" }
        }
      },
      "outputSchema": { "type": "object", "properties": { "result": { "type": "string" } } }
    },
    {
      "name": "cloudinary.asset.rename",
      "description": "Rename (change public_id) of an asset.",
      "inputSchema": {
        "type": "object",
        "required": ["from_public_id", "to_public_id"],
        "properties": {
          "from_public_id": { "type": "string" },
          "to_public_id": { "type": "string" },
          "overwrite": { "type": "boolean" },
          "invalidate": { "type": "boolean" }
        }
      },
      "outputSchema": { "type": "object", "properties": { "public_id": { "type": "string" }, "old_public_id": { "type": "string" } } }
    },
    {
      "name": "cloudinary.asset.move",
      "description": "Move asset to a different folder (implemented via rename).",
      "inputSchema": {
        "type": "object",
        "required": ["public_id", "to_folder"],
        "properties": {
          "public_id": { "type": "string" },
          "to_folder": { "type": "string" },
          "overwrite": { "type": "boolean" },
          "invalidate": { "type": "boolean" }
        }
      },
      "outputSchema": { "type": "object", "properties": { "new_public_id": { "type": "string" }, "old_public_id": { "type": "string" } } }
    },
    {
      "name": "cloudinary.asset.update_context",
      "description": "Add or update key-value context metadata on an asset.",
      "inputSchema": {
        "type": "object",
        "required": ["public_id", "context"],
        "properties": {
          "public_id": { "type": "string" },
          "context": { "type": "object", "additionalProperties": { "type": "string" } }
        }
      },
      "outputSchema": { "type": "object", "properties": { "public_id": { "type": "string" }, "context": { "type": "object" } } }
    },
    {
      "name": "cloudinary.asset.explicit",
      "description": "Explicitly refresh / generate derived assets.",
      "inputSchema": {
        "type": "object",
        "required": ["public_id"],
        "properties": {
          "public_id": { "type": "string" },
          "type": { "type": "string", "enum": ["upload", "public", "authenticated", "private"] },
          "eager": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "width": { "type": "number" },
                "height": { "type": "number" },
                "crop": { "type": "string" },
                "format": { "type": "string" }
              }
            }
          }
        }
      },
      "outputSchema": { "type": "object", "properties": { "public_id": { "type": "string" }, "derived": { "type": "array" } } }
    },
    {
      "name": "cloudinary.folder.list",
      "description": "List subfolders under a given folder prefix.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "path": { "type": "string", "description": "Folder prefix; empty or omitted for root." }
        }
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "folders": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "path": { "type": "string" }
              }
            }
          }
        }
      }
    }
  ]
}